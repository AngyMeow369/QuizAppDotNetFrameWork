@{@{
        ViewBag.Title = "Admin Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Welcome, @ViewBag.Username (Admin)</h3>
        </div>
        <div class="card-body">
            <p class="lead">This is your admin dashboard. Use the sections below to manage the platform.</p>

            <div class="row mt-4">
                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Manage Users</h5>
                            <p class="card-text">Add, edit, or delete users.</p>
                            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">Go</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Manage Quizzes</h5>
                            <p class="card-text">Add, edit, or delete quizzes.</p>
                            <a href="@Url.Action("ManageQuizzes", "Quiz")" class="btn btn-primary">Go</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Manage Questions</h5>
                            <p class="card-text">Add, edit, or delete questions.</p>
                            <a href="@Url.Action("ManageQuestions", "Quiz")" class="btn btn-primary">Go</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Logout</h5>
                            <p class="card-text">End your session.</p>
                            <a href="@Url.Action("Logout", "Users")" class="btn btn-danger">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

