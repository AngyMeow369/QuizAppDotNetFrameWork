@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-dark border-secondary">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2 text-white">
                                <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                            </h1>
                            <p class="card-text mb-0 text-light opacity-75">Welcome back, <strong class="text-warning">@ViewBag.Username</strong>. Manage your quiz platform efficiently.</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="bg-dark bg-opacity-50 border border-secondary rounded p-3 d-inline-block">
                                <small class="text-uppercase fw-bold text-light opacity-75">Role</small>
                                <div class="h5 mb-0 text-success">Administrator</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Row -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-secondary bg-dark text-light h-100">
                <div class="card-body text-center">
                    <i class="bi bi-send-check text-primary fs-1 mb-3"></i>
                    <h5 class="card-title">Assign Quizzes</h5>
                    <p class="card-text text-muted">Assign quizzes to users with automatic time limits</p>
                    <a href="@Url.Action("AssignQuiz", "Admin")" class="btn btn-primary w-100">
                        <i class="bi bi-send-check me-2"></i>Assign Quiz
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-secondary bg-dark text-light h-100">
                <div class="card-body text-center">
                    <i class="bi bi-list-check text-success fs-1 mb-3"></i>
                    <h5 class="card-title">View Assignments</h5>
                    <p class="card-text text-muted">Monitor all quiz assignments and completion status</p>
                    <a href="@Url.Action("ViewAssignments", "Admin")" class="btn btn-success w-100">
                        <i class="bi bi-list-check me-2"></i>View Assignments
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-secondary bg-dark text-light h-100">
                <div class="card-body text-center">
                    <i class="bi bi-plus-circle text-warning fs-1 mb-3"></i>
                    <h5 class="card-title">Create Quiz</h5>
                    <p class="card-text text-muted">Quickly create a new quiz with questions and options</p>
                    <a href="@Url.Action("AddQuiz", "Quiz")" class="btn btn-warning w-100">
                        <i class="bi bi-plus-circle me-2"></i>Create Quiz
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="bi bi-people me-2"></i>User Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">Manage system users, roles, and permissions. Create, edit, or deactivate user accounts.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-plus-circle text-success me-2"></i>Add new users</li>
                        <li><i class="bi bi-pencil-square text-warning me-2"></i>Edit user details</li>
                        <li><i class="bi bi-trash text-danger me-2"></i>Manage user access</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-success">
                        <i class="bi bi-file-text me-2"></i>Quiz Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">Create and manage quizzes, set time limits, and organize questions for assessments.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-plus-circle text-success me-2"></i>Create new quizzes</li>
                        <li><i class="bi bi-pencil-square text-warning me-2"></i>Edit existing quizzes</li>
                        <li><i class="bi bi-clock text-info me-2"></i>Set time limits</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("ManageQuizzes", "Quiz")" class="btn btn-outline-success w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Manage Quizzes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-warning">
                        <i class="bi bi-send-check me-2"></i>Quiz Assignments
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">Assign quizzes to specific users with deadlines and automatic time limits (1 minute per question).</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-send-check text-primary me-2"></i>Assign to users</li>
                        <li><i class="bi bi-clock text-warning me-2"></i>Set due dates</li>
                        <li><i class="bi bi-graph-up text-success me-2"></i>Track progress</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <div class="row g-2">
                        <div class="col-6">
                            <a href="@Url.Action("AssignQuiz", "Admin")" class="btn btn-outline-warning w-100">
                                <i class="bi bi-send-check me-1"></i>Assign
                            </a>
                        </div>
                        <div class="col-6">
                            <a href="@Url.Action("ViewAssignments", "Admin")" class="btn btn-outline-info w-100">
                                <i class="bi bi-eye me-1"></i>View
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Management Cards -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-info">
                        <i class="bi bi-question-circle me-2"></i>Question Bank
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">View all questions across all quizzes in one central repository. Perfect for reviewing and managing questions.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-eye text-primary me-2"></i>View all questions</li>
                        <li><i class="bi bi-search text-info me-2"></i>Browse by category</li>
                        <li><i class="bi bi-link text-success me-2"></i>See question usage</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("QuestionsBank", "Quiz")" class="btn btn-outline-info w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Question Bank
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-purple">
                        <i class="bi bi-graph-up me-2"></i>Results & Analytics
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">View quiz results, user performance, and system analytics. Track completion rates and scores.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-graph-up text-purple me-2"></i>Performance analytics</li>
                        <li><i class="bi bi-clock-history text-info me-2"></i>Completion tracking</li>
                        <li><i class="bi bi-trophy text-warning me-2"></i>Score analysis</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("AdminResults", "Quiz")" class="btn btn-outline-purple w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Results
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Footer -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body text-center py-3">
                    <div class="row">
                        <div class="col-md-3 mb-2 mb-md-0">
                            <i class="bi bi-lightning-charge text-primary me-2"></i>
                            <small class="text-muted">Quick assignment with 1-click</small>
                        </div>
                        <div class="col-md-3 mb-2 mb-md-0">
                            <i class="bi bi-clock text-success me-2"></i>
                            <small class="text-muted">Automatic time calculation</small>
                        </div>
                        <div class="col-md-3 mb-2 mb-md-0">
                            <i class="bi bi-bell text-warning me-2"></i>
                            <small class="text-muted">Deadline tracking</small>
                        </div>
                        <div class="col-md-3">
                            <i class="bi bi-graph-up text-info me-2"></i>
                            <small class="text-muted">Progress monitoring</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
    }

    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .text-purple {
        color: #6f42c1 !important;
    }

    .btn-outline-purple {
        color: #6f42c1;
        border-color: #6f42c1;
    }

        .btn-outline-purple:hover {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #1a202c;
        }

    .bg-gradient {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%) !important;
    }

    .card {
        background-color: #2d3748;
        border-color: #4a5568;
    }

    .text-light {
        color: #e2e8f0 !important;
    }

    .text-muted {
        color: #a0aec0 !important;
    }

    .border-secondary {
        border-color: #4a5568 !important;
    }

    .btn-outline-primary {
        color: #63b3ed;
        border-color: #63b3ed;
    }

        .btn-outline-primary:hover {
            background-color: #63b3ed;
            border-color: #63b3ed;
            color: #1a202c;
        }

    .btn-outline-success {
        color: #68d391;
        border-color: #68d391;
    }

        .btn-outline-success:hover {
            background-color: #68d391;
            border-color: #68d391;
            color: #1a202c;
        }

    .btn-outline-info {
        color: #76e4f7;
        border-color: #76e4f7;
    }

        .btn-outline-info:hover {
            background-color: #76e4f7;
            border-color: #76e4f7;
            color: #1a202c;
        }

    .btn-outline-warning {
        color: #f6e05e;
        border-color: #f6e05e;
    }

        .btn-outline-warning:hover {
            background-color: #f6e05e;
            border-color: #f6e05e;
            color: #1a202c;
        }

    /* Hover effects for cards */
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }
</style>