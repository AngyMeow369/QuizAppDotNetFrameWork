@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-dark border-secondary">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2 text-white">
                                <i class="bi bi-speedometer2 me-2"></i>Admin Dashboard
                            </h1>
                            <p class="card-text mb-0 text-light opacity-75">Welcome back, <strong class="text-warning">@ViewBag.Username</strong>. Manage your quiz platform efficiently.</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="bg-dark bg-opacity-50 border border-secondary rounded p-3 d-inline-block">
                                <small class="text-uppercase fw-bold text-light opacity-75">Role</small>
                                <div class="h5 mb-0 text-success">Administrator</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Total Users</h6>
                            <h3 class="text-success mb-0">--</h3>
                        </div>
                        <i class="bi bi-people-fill text-success fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Total Quizzes</h6>
                            <h3 class="text-info mb-0">--</h3>
                        </div>
                        <i class="bi bi-file-text-fill text-info fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Active Exams</h6>
                            <h3 class="text-warning mb-0">--</h3>
                        </div>
                        <i class="bi bi-clock-fill text-warning fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Completed</h6>
                            <h3 class="text-purple mb-0">--</h3>
                        </div>
                        <i class="bi bi-check-circle-fill text-purple fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Cards - FIXED -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-primary">
                        <i class="bi bi-people me-2"></i>User Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">Manage system users, roles, and permissions. Create, edit, or deactivate user accounts.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-plus-circle text-success me-2"></i>Add new users</li>
                        <li><i class="bi bi-pencil-square text-warning me-2"></i>Edit user details</li>
                        <li><i class="bi bi-trash text-danger me-2"></i>Manage user access</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-outline-primary w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-success">
                        <i class="bi bi-file-text me-2"></i>Quiz Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">Create and manage quizzes, set time limits, and organize questions for assessments.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-plus-circle text-success me-2"></i>Create new quizzes</li>
                        <li><i class="bi bi-pencil-square text-warning me-2"></i>Edit existing quizzes</li>
                        <li><i class="bi bi-clock text-info me-2"></i>Set time limits</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("ManageQuizzes", "Quiz")" class="btn btn-outline-success w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>Manage Quizzes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-secondary bg-dark text-light h-100">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-info">
                        <i class="bi bi-question-circle me-2"></i>Question Bank
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text text-light">View all questions across all quizzes in one central repository. Perfect for reviewing and managing questions.</p>
                    <ul class="list-unstyled text-light">
                        <li><i class="bi bi-eye text-primary me-2"></i>View all questions</li>
                        <li><i class="bi bi-search text-info me-2"></i>Browse by category</li>
                        <li><i class="bi bi-link text-success me-2"></i>See question usage</li>
                    </ul>
                </div>
                <div class="card-footer bg-dark border-secondary">
                    <a href="@Url.Action("QuestionsBank", "Quiz")" class="btn btn-outline-info w-100">
                        <i class="bi bi-arrow-right-circle me-2"></i>View Question Bank
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="row mt-2">
        <div class="col-12">
            <div class="card shadow-sm border-secondary bg-dark text-light">
                <div class="card-header bg-dark border-secondary">
                    <h5 class="card-title mb-0 text-light">
                        <i class="bi bi-activity me-2"></i>Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-inbox fs-1 d-block mb-2 text-secondary"></i>
                        <p class="text-light">No recent activity to display</p>
                        <small class="text-muted">User attempts and system activities will appear here</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
    }

    .bg-purple {
        background-color: #6f42c1 !important;
    }

    .text-purple {
        color: #6f42c1 !important;
    }

    .bg-gradient {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%) !important;
    }

    .card {
        background-color: #2d3748;
        border-color: #4a5568;
    }

    .text-light {
        color: #e2e8f0 !important;
    }

    .text-muted {
        color: #a0aec0 !important;
    }

    .border-secondary {
        border-color: #4a5568 !important;
    }

    .btn-outline-primary {
        color: #63b3ed;
        border-color: #63b3ed;
    }

        .btn-outline-primary:hover {
            background-color: #63b3ed;
            border-color: #63b3ed;
            color: #1a202c;
        }

    .btn-outline-success {
        color: #68d391;
        border-color: #68d391;
    }

        .btn-outline-success:hover {
            background-color: #68d391;
            border-color: #68d391;
            color: #1a202c;
        }

    .btn-outline-info {
        color: #76e4f7;
        border-color: #76e4f7;
    }

        .btn-outline-info:hover {
            background-color: #76e4f7;
            border-color: #76e4f7;
            color: #1a202c;
        }
</style>