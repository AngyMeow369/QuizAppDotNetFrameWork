@model List<QuizAppDotNetFrameWork.Models.User>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-dark border-secondary">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2 text-white">
                                <i class="bi bi-people-fill me-2"></i>User Management
                            </h1>
                            <p class="card-text mb-0 text-light opacity-75">
                                Manage system users and their roles
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="bg-dark bg-opacity-50 border border-secondary rounded p-3 d-inline-block">
                                <small class="text-uppercase fw-bold text-light opacity-75">Total Users</small>
                                <div class="h4 mb-0 text-primary">@Model.Count</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Statistics -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h5 class="text-primary mb-1">@Model.Count(u => u.Role == "Admin")</h5>
                    <small class="text-muted">Administrators</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h5 class="text-info mb-1">@Model.Count(u => u.Role == "User")</h5>
                    <small class="text-muted">Regular Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h5 class="text-success mb-1">@Model.Count</h5>
                    <small class="text-muted">Total Active</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-secondary bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h5 class="text-warning mb-1">@DateTime.Now.ToString("MMM yyyy")</h5>
                    <small class="text-muted">Last Updated</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-secondary bg-dark text-light">
                <div class="card-header bg-dark border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-light">
                        <i class="bi bi-list-ul me-2"></i>System Users
                        <span class="badge bg-primary ms-2">@Model.Count</span>
                    </h5>
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-download me-1"></i>Export
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-file-text me-2"></i>CSV</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-file-pdf me-2"></i>PDF</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>
                                            <i class="bi bi-person-badge me-1"></i>User ID
                                        </th>
                                        <th>
                                            <i class="bi bi-person me-1"></i>Username
                                        </th>
                                        <th>
                                            <i class="bi bi-shield me-1"></i>Role
                                        </th>
                                        <th>
                                            <i class="bi bi-activity me-1"></i>Status
                                        </th>
                                        <th class="text-center">
                                            <i class="bi bi-gear me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-bold text-primary">#@user.UserId</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-person text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-light">@user.Username</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-shield-check me-1"></i>Administrator
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-person me-1"></i>User
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a class="btn btn-outline-primary"
                                                       href="@Url.Action("EditUser", "Admin", new { userId = user.UserId })"
                                                       title="Edit User">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>

                                                    @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="userId" value="@user.UserId" />
                                                        <button type="submit"
                                                                class="btn btn-outline-danger"
                                                                onclick="return confirm('Are you sure you want to delete user \" @user.Username \"? This action cannot be undone.');"
                                                                title="Delete User">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }

                                                    <button class="btn btn-outline-info"
                                                            onclick="showUserDetails('@user.UserId', '@user.Username', '@user.Role')"
                                                            title="View Details">
                                                        <i class="bi bi-info-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-secondary bg-dark">
                                    <div class="card-body text-center py-3">
                                        <div class="row">
                                            <div class="col-md-4 mb-2 mb-md-0">
                                                <i class="bi bi-person-plus text-success me-2"></i>
                                                <small class="text-muted">Add new users to the system</small>
                                            </div>
                                            <div class="col-md-4 mb-2 mb-md-0">
                                                <i class="bi bi-shield-check text-warning me-2"></i>
                                                <small class="text-muted">Manage user roles and permissions</small>
                                            </div>
                                            <div class="col-md-4">
                                                <i class="bi bi-graph-up text-info me-2"></i>
                                                <small class="text-muted">Monitor user activity and performance</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted"></i>
                            <h4 class="text-light mt-3">No Users Found</h4>
                            <p class="text-muted">There are no users in the system yet.</p>
                            <a href="@Url.Action("Register", "Users")" class="btn btn-success">
                                <i class="bi bi-person-plus me-1"></i>Add First User
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="userDetailsContent">
                    <!-- Content will be loaded dynamically -->
                </div>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%) !important;
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #4a5568 !important;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .badge {
        font-size: 0.75em;
    }

    .btn-group .btn {
        border-radius: 0.375rem !important;
        margin: 0 2px;
    }
</style>

<script>
    function showUserDetails(userId, username, role) {
        const content = `
            <div class="row">
                <div class="col-12">
                    <div class="text-center mb-3">
                        <div class="avatar-lg bg-primary rounded-circle d-inline-flex align-items-center justify-content-center">
                            <i class="bi bi-person text-white fs-2"></i>
                        </div>
                    </div>
                    <table class="table table-dark table-sm">
                        <tr>
                            <td><strong>User ID:</strong></td>
                            <td>#${userId}</td>
                        </tr>
                        <tr>
                            <td><strong>Username:</strong></td>
                            <td>${username}</td>
                        </tr>
                        <tr>
                            <td><strong>Role:</strong></td>
                            <td>${role}</td>
                        </tr>
                        <tr>
                            <td><strong>Status:</strong></td>
                            <td><span class="badge bg-success">Active</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        `;

        document.getElementById('userDetailsContent').innerHTML = content;
        new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
    }

    // Search functionality
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.createElement('input');
        searchInput.type = 'text';
        searchInput.placeholder = 'Search users...';
        searchInput.className = 'form-control form-control-sm bg-dark text-light border-secondary';
        searchInput.style.maxWidth = '250px';

        searchInput.addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Add search to header
        const cardHeader = document.querySelector('.card-header');
        cardHeader.appendChild(searchInput);
    });
</script>