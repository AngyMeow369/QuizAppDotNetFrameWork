@model List<QuizAppDotNetFrameWork.Models.User>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-dark border-light">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2 text-white">
                                <i class="bi bi-people-fill me-2"></i>User Management
                            </h1>
                            <p class="card-text mb-0 text-white-70">
                                Manage system users and their roles
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="bg-dark bg-opacity-50 border border-light rounded p-3 d-inline-block">
                                <small class="text-uppercase fw-bold text-white-70">Total Users</small>
                                <div class="h4 mb-0 text-success">@Model.Count</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Statistics -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-light bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h3 class="text-success mb-1">@Model.Count(u => u.Role == "Admin")</h3>
                    <strong class="text-white">Administrators</strong>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-light bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h3 class="text-info mb-1">@Model.Count(u => u.Role == "User")</h3>
                    <strong class="text-white">Regular Users</strong>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-light bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h3 class="text-warning mb-1">@Model.Count</h3>
                    <strong class="text-white">Total Active</strong>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-light bg-dark text-light">
                <div class="card-body text-center py-3">
                    <h3 class="text-primary mb-1">@DateTime.Now.ToString("MMM yyyy")</h3>
                    <strong class="text-white">Last Updated</strong>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-light bg-dark text-light">
                <div class="card-header bg-dark border-light d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0 text-white">
                        <i class="bi bi-list-ul me-2"></i>System Users
                        <span class="badge bg-success ms-2">@Model.Count</span>
                    </h5>
                    <div class="d-flex align-items-center gap-2">
                        <input type="text" id="userSearch" placeholder="Search users..."
                               class="form-control form-control-sm bg-dark text-light border-light"
                               style="max-width: 250px;">
                        <div class="dropdown">
                            <button class="btn btn-outline-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-download me-1"></i>Export
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-file-text me-2"></i>CSV</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-file-pdf me-2"></i>PDF</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle">
                                <thead class="border-light">
                                    <tr>
                                        <th class="border-light text-white">
                                            <i class="bi bi-person-badge me-1"></i>User ID
                                        </th>
                                        <th class="border-light text-white">
                                            <i class="bi bi-person me-1"></i>Username
                                        </th>
                                        <th class="border-light text-white">
                                            <i class="bi bi-shield me-1"></i>Role
                                        </th>
                                        <th class="border-light text-white">
                                            <i class="bi bi-activity me-1"></i>Status
                                        </th>
                                        <th class="border-light text-white text-center">
                                            <i class="bi bi-gear me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr class="border-light">
                                            <td class="border-light">
                                                <span class="fw-bold text-success">#@user.UserId</span>
                                            </td>
                                            <td class="border-light">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-success rounded-circle d-flex align-items-center justify-content-center me-3">
                                                        <i class="bi bi-person text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-white">@user.Username</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="border-light">
                                                @if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-shield-check me-1"></i>Administrator
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="bi bi-person me-1"></i>User
                                                    </span>
                                                }
                                            </td>
                                            <td class="border-light">
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Active
                                                </span>
                                            </td>
                                            <td class="border-light text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a class="btn btn-outline-primary border-primary text-primary"
                                                       href="@Url.Action("EditUser", "Admin", new { userId = user.UserId })"
                                                       title="Edit User">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>

                                                    @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { @class = "d-inline" }))
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="userId" value="@user.UserId" />
                                                        <button type="submit"
                                                                class="btn btn-outline-danger border-danger text-danger"
                                                                onclick="return confirm('Are you sure you want to delete user \" @user.Username \"? This action cannot be undone.');"
                                                                title="Delete User">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    }

                                                    <button class="btn btn-outline-info border-info text-info"
                                                            onclick="showUserDetails('@user.UserId', '@user.Username', '@user.Role')"
                                                            title="View Details">
                                                        <i class="bi bi-info-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card border-light bg-dark">
                                    <div class="card-body text-center py-3">
                                        <div class="row">
                                            <div class="col-md-4 mb-2 mb-md-0">
                                                <i class="bi bi-person-plus text-success me-2"></i>
                                                <small class="text-white-70">Add new users to the system</small>
                                            </div>
                                            <div class="col-md-4 mb-2 mb-md-0">
                                                <i class="bi bi-shield-check text-warning me-2"></i>
                                                <small class="text-white-70">Manage user roles and permissions</small>
                                            </div>
                                            <div class="col-md-4">
                                                <i class="bi bi-graph-up text-info me-2"></i>
                                                <small class="text-white-70">Monitor user activity and performance</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-white-50"></i>
                            <h4 class="text-white mt-3">No Users Found</h4>
                            <p class="text-white-70">There are no users in the system yet.</p>
                            <a href="@Url.Action("Register", "Users")" class="btn btn-success">
                                <i class="bi bi-person-plus me-1"></i>Add First User
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light border-light">
            <div class="modal-header border-light">
                <h5 class="modal-title text-white">User Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="userDetailsContent">
                    <!-- Content will be loaded dynamically -->
                </div>
            </div>
            <div class="modal-footer border-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #1a1a1a;
        color: #ffffff;
    }

    .bg-gradient {
        background: linear-gradient(135deg, #065f46 0%, #059669 100%) !important;
    }

    /* Custom text color classes for better visibility */
    .text-white-90 {
        color: rgba(255, 255, 255, 0.95) !important;
    }

    .text-white-80 {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    .text-white-70 {
        color: rgba(255, 255, 255, 0.75) !important;
    }

    .text-white-60 {
        color: rgba(255, 255, 255, 0.65) !important;
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.55) !important;
    }

    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }

    .avatar-lg {
        width: 80px;
        height: 80px;
        font-size: 2rem;
    }

    .table-dark {
        --bs-table-bg: transparent;
        --bs-table-border-color: #6b7280;
        --bs-table-hover-bg: rgba(16, 185, 129, 0.08);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(16, 185, 129, 0.08) !important;
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .badge {
        font-size: 0.75em;
        font-weight: 600;
    }

    .btn-group .btn {
        border-radius: 0.375rem !important;
        margin: 0 2px;
    }

    /* Card improvements */
    .card {
        border: 1px solid #6b7280;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.4) !important;
    }

    /* Button hover effects */
    .btn-outline-primary:hover {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: white !important;
    }

    .btn-outline-info:hover {
        background-color: #0dcaf0;
        border-color: #0dcaf0;
        color: white !important;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white !important;
    }

    /* Responsive improvements */
    @@media (max-width: 768px) {
        .table-responsive {
            font-size: 0.875rem;
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        .display-1 {
            font-size: 3rem;
        }

        .card-header {
            flex-direction: column;
            gap: 10px;
            align-items: start !important;
        }

            .card-header .d-flex {
                width: 100%;
                justify-content: space-between;
            }
    }
</style>

<script>
    function showUserDetails(userId, username, role) {
        const content = `
            <div class="row">
                <div class="col-12">
                    <div class="text-center mb-3">
                        <div class="avatar-lg bg-success rounded-circle d-inline-flex align-items-center justify-content-center">
                            <i class="bi bi-person text-white fs-2"></i>
                        </div>
                    </div>
                    <table class="table table-dark table-sm">
                        <tr>
                            <td class="border-light"><strong class="text-white">User ID:</strong></td>
                            <td class="border-light text-white-80">#${userId}</td>
                        </tr>
                        <tr>
                            <td class="border-light"><strong class="text-white">Username:</strong></td>
                            <td class="border-light text-white-80">${username}</td>
                        </tr>
                        <tr>
                            <td class="border-light"><strong class="text-white">Role:</strong></td>
                            <td class="border-light text-white-80">${role}</td>
                        </tr>
                        <tr>
                            <td class="border-light"><strong class="text-white">Status:</strong></td>
                            <td class="border-light"><span class="badge bg-success">Active</span></td>
                        </tr>
                    </table>
                </div>
            </div>
        `;

        document.getElementById('userDetailsContent').innerHTML = content;
        new bootstrap.Modal(document.getElementById('userDetailsModal')).show();
    }

    // Search functionality
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('userSearch');

        searchInput.addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    });
</script>