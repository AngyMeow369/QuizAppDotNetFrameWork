@model List<QuizAppDotNetFrameWork.Models.User>
@{
    ViewBag.Title = "Manage Users";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Manage Users</h3>
        <a class="btn btn-success" href="@Url.Action("AddUser", "Admin")">Add New User</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.Username</td>
                    <td>@user.Role</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="@Url.Action("EditUser", "Admin", new { userId = user.UserId })">Edit</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteUser", "Admin", new { userId = user.UserId })" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
