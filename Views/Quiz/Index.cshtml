@model List<QuizAppDotNetFrameWork.Models.Quiz>

@{
    ViewBag.Title = "User Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Welcome, @ViewBag.Username</h3>
        <a href="@Url.Action("Logout", "Users")" class="btn btn-danger btn-sm">
            Logout
        </a>
    </div>
    <div class="card-body">
        <p class="lead">This is your user dashboard. Here are the available quizzes:</p>

        @if (Model != null && Model.Count > 0)
        {
            <ul class="list-group">
                @foreach (var quiz in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @quiz.Title
                        <a href="@Url.Action("Questions", "Quiz", new { quizId = quiz.Id })" class="btn btn-sm btn-success">
                            Start Quiz
                        </a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No quizzes available at the moment.</p>
        }

        <hr />
    </div>
</div>
