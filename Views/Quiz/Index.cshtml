@model List<QuizAppDotNetFrameWork.Models.Quiz>

@{
    ViewBag.Title = "Available Quizzes";
}

<div class="container mt-4">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-success text-white">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2">
                                <i class="bi bi-journals me-2"></i>Available Quizzes
                            </h1>
                            <p class="card-text mb-0 opacity-75">Welcome, <strong>@ViewBag.Username</strong>. Choose a quiz to start your assessment.</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="bg-light bg-opacity-25 rounded p-3 d-inline-block">
                                <small class="text-uppercase fw-bold opacity-75">Status</small>
                                <div class="h5 mb-0">Ready</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quiz Statistics -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Available Quizzes</h6>
                            <h3 class="text-primary mb-0">@Model.Count</h3>
                        </div>
                        <i class="bi bi-journals text-primary fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">Completed</h6>
                            <h3 class="text-warning mb-0">0</h3>
                        </div>
                        <i class="bi bi-check-circle text-warning fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-0 bg-info bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted mb-1">In Progress</h6>
                            <h3 class="text-info mb-0">0</h3>
                        </div>
                        <i class="bi bi-clock text-info fs-1"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quizzes List -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-task me-2"></i>Your Available Quizzes
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="row">
                            @foreach (var quiz in Model)
                            {
                                <div class="col-lg-6 mb-4">
                                    <div class="card h-100 border quiz-card">
                                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                            <h6 class="mb-0">@quiz.Title</h6>
                                            <span class="badge bg-light text-dark">New</span>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text text-muted">
                                                @if (!string.IsNullOrEmpty(quiz.Description))
                                                {
                                                    @quiz.Description
                                                }
                                                else
                                                {
                                                    <em>No description available</em>
                                                }
                                            </p>
                                            <div class="quiz-meta">
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar me-1"></i>Created: @quiz.CreatedOn.ToString("MMM dd, yyyy")
                                                </small>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-grid gap-2">
                                                <a href="@Url.Action("Questions", "Quiz", new { quizId = quiz.QuizId })"
                                                   class="btn btn-success btn-sm">
                                                    <i class="bi bi-play-circle me-1"></i>Start Quiz
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                            <h5 class="text-muted">No Quizzes Available</h5>
                            <p class="text-muted">There are no quizzes assigned to you at the moment.</p>
                            <small class="text-muted">Please check back later or contact your administrator.</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 bg-light">
                <div class="card-body text-center py-3">
                    <div class="row">
                        <div class="col-md-4 mb-2 mb-md-0">
                            <i class="bi bi-clock-history text-primary me-2"></i>
                            <small>View your quiz history and results</small>
                        </div>
                        <div class="col-md-4 mb-2 mb-md-0">
                            <i class="bi bi-graph-up text-success me-2"></i>
                            <small>Track your progress and scores</small>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-info-circle text-info me-2"></i>
                            <small>Need help? Contact administrator</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #198754 0%, #146c43 100%) !important;
    }

    .quiz-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .quiz-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>