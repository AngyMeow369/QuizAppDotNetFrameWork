@model List<QuizAppDotNetFrameWork.Models.Question>

@{
    ViewBag.Title = "Questions Bank";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient bg-dark border-secondary">
                <div class="card-body py-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="card-title h2 mb-2 text-white">
                                <i class="bi bi-collection me-2"></i>Questions Bank
                            </h1>
                            <p class="card-text mb-0 text-light opacity-75">
                                Central repository of all questions across all quizzes.
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <a href="@Url.Action("ManageQuizzes")" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Back to Quizzes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-secondary bg-dark text-light">
        <div class="card-header bg-dark border-secondary">
            <h5 class="card-title mb-0 text-light">
                <i class="bi bi-list-task me-2"></i>All Questions (@Model.Count)
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="row">
                    @foreach (var question in Model)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card border-secondary bg-dark text-light">
                                <div class="card-body">
                                    <h6 class="card-title">@question.QuestionText</h6>
                                    <div class="question-meta">
                                        <small class="text-muted">
                                            Quiz: @(ViewBag.QuizTitles?[question.QuizId] ?? "Unknown Quiz") |
                                            Options: @(question.Options?.Count ?? 0)
                                        </small>
                                    </div>
                                    @if (question.Options != null && question.Options.Count > 0)
                                    {
                                        <div class="mt-2">
                                            @foreach (var option in question.Options)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" disabled
                                                           @(option.IsCorrect ? "checked" : "")>
                                                    <label class="form-check-label small @(option.IsCorrect ? "text-success fw-bold" : "text-muted")">
                                                        @option.OptionText
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-collection fs-1 text-muted d-block mb-3"></i>
                    <h5 class="text-light">No Questions Available</h5>
                    <p class="text-muted">Questions will appear here as you add them to quizzes.</p>
                    <a href="@Url.Action("ManageQuizzes")" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle me-2"></i>Add Questions to Quizzes
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%) !important;
    }

    .form-check-input:checked {
        background-color: #68d391;
        border-color: #68d391;
    }
</style>