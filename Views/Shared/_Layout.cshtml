<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Quiz Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary">
        <div class="container">
            @Html.ActionLink("QuizApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Session["Username"] != null) // User is logged in
                    {
                        if (Session["Role"]?.ToString() == "Admin") // Admin role
                        {
                            <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Manage Quizzes", "ManageQuizzes", "Quiz", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Manage Users", "ManageUsers", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Assign Quiz", "AssignQuiz", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("View Assignments", "ViewAssignments", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else // Regular user role
                        {
                            <li class="nav-item">@Html.ActionLink("My Quizzes", "Index", "Quiz", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("My Assignments", "AssignedQuizzes", "Quiz", new { area = "" }, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Results", "Results", "Quiz", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                    else // User is not logged in
                    {
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Users", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Users", null, new { @class = "nav-link" })</li>
                    }
                </ul>

                <!-- User Info and Logout Section -->
                <ul class="navbar-nav">
                    @if (Session["Username"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>
                                @Session["Username"]
                                <small class="badge bg-light text-dark ms-1">@Session["Role"]</small>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><span class="dropdown-item-text">Signed in as <strong>@Session["Username"]</strong></span></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>@Html.ActionLink("Profile", "Profile", "Users", null, new { @class = "dropdown-item dropdown-item-black" })</li>
                                <li>@Html.ActionLink("Change Password", "ChangePassword", "Users", null, new { @class = "dropdown-item dropdown-item-black" })</li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    @Html.ActionLink("Logout", "Logout", "Users", null, new
                                    {
                                        @class = "dropdown-item text-danger fw-bold",
                                        onclick = "return confirm('Are you sure you want to logout?');"
                                    })
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <style>
        .dropdown-item-black {
            background-color: black;
            color: white;
        }

            .dropdown-item-black:hover {
                background-color: #333;
                color: white;
            }

        /* Highlight the My Assignments link when there are pending assignments */
        .nav-item .nav-link[href*="AssignedQuizzes"] {
            position: relative;
        }
    </style>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="mt-4">
            <p class="text-center text-muted">&copy; @DateTime.Now.Year - Quiz Application. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>